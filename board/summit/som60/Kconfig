if TARGET_SOM60 || TARGET_IG60 || TARGET_WB50N || TARGET_WB50N_SYSD

config SYS_BOARD
	default "som60"

config SYS_VENDOR
	default "summit"

config SYS_CONFIG_NAME
	default "ig60" if TARGET_IG60
	default "som60" if TARGET_SOM60
	default "wb50n" if TARGET_WB50N
	default "wb50n_sysd" if TARGET_WB50N_SYSD

config TARGET_WB50N_ALL
	bool
	default y
	depends on TARGET_WB50N || TARGET_WB50N_SYSD

config SYS_EEPROM_SETUP
	bool "Run-time EEPROM based Module Configuration"
	default y
	depends on TARGET_SOM60 || TARGET_IG60
	select DM_I2C
	select SYS_I2C_AT91
	select I2C_EEPROM
	select NVMEM
	select SPL_DM_I2C if SUPPORT_SPL
	select SPL_I2C if SUPPORT_SPL
	select SPL_I2C_EEPROM if SUPPORT_SPL
	select SPL_NVMEM if SUPPORT_SPL

config SPL_SYS_MENU
	bool "Board configuration SPL Menu"
	depends on SUPPORT_SPL
	depends on SYS_EEPROM_SETUP
	select SPL_DISPLAY_PRINT
	help
		Enables programming and verification into EEPROM of
		board HW ID and MAC addresses for manufacturing.
		HW ID identifies DRAM type insttalled on the module
		This is required to run prior to initializing DRAM

config CMD_MAC
	bool "MAC and HW ID commands"
	depends on CMDLINE
	depends on SYS_EEPROM_SETUP
	help
		Enables configuration of MAC and HW ID from the
		command line

endif
