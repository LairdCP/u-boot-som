#include "at91sam9g25.dtsi"

/ {
	model = "Summit Workgroup Bridge 45N - Atmel AT91SAM9G25";
	compatible = "summit,wb45n", "atmel,at91sam9g25", "atmel,at91sam9x5";

	chosen {
		stdout-path = "serial0:115200n8";
	};

	memory {
		reg = <0x20000000 0x4000000>;
	};

	ahb {
		apb {
			shdwc@fffffe10 {
				atmel,wakeup-mode = "low";
			};

			watchdog@fffffe40 {
				atmel,idle-halt;
				status = "okay";
			};

			rtc@fffffeb0 {
				status = "okay";
			};

			pinctrl@fffff400 {
				board {
					pinctrl_usba_vbus: usba_vbus {
						atmel,pins =
							<AT91_PIOB 11 AT91_PERIPH_GPIO AT91_PINCTRL_DEGLITCH>;		/* PB11 gpio vbus sense, deglitch */
					};

					pinctrl_usb_vbus: usb_vbus {
						atmel,pins =
							<AT91_PIOB 12 AT91_PERIPH_GPIO AT91_PINCTRL_NONE>,
							<AT91_PIOA 31 AT91_PERIPH_GPIO AT91_PINCTRL_NONE>,
							<AT91_PIOB 13 AT91_PERIPH_GPIO AT91_PINCTRL_DEGLITCH>;
					};

					pinctrl_wifi_pmu_en: wifi_pmu_en {
						atmel,pins =
							<AT91_PIOA 25 AT91_PERIPH_GPIO AT91_PINCTRL_PULL_UP>;
					};

					pinctrl_nand0_wp: nand0_wp {
						bootph-all;
						atmel,pins =
							<AT91_PIOD 10 AT91_PERIPH_GPIO AT91_PINCTRL_NONE>;
					};
				};
			};
		};
	};
};

&slow_xtal {
	clock-frequency = <32768>;
};

&main_xtal {
	clock-frequency = <12000000>;
};

&slow_osc {
	atmel,startup-time-usec = <1200000>;
};

&mmc0 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_mmc0_slot0_clk_cmd_dat0 &pinctrl_mmc0_slot0_dat1_3>;

	slot@0 {
		reg = <0>;
		bus-width = <4>;
	};
};

&macb0 {
	phy-mode = "rmii";
};

&dbgu {
	bootph-all;
};

&nand0 {
	pinctrl-0 = <&pinctrl_nand0_wp>;

	nand-bus-width = <8>;
	nand-ecc-mode = "hw";
	atmel,has-pmecc;
	atmel,pmecc-cap = <4>;
	atmel,pmecc-sector-size = <512>;
	nand-on-flash-bbt;

	status = "okay";

	at91bootstrap@0 {
		label = "at91bs";
		reg = <0x0 0x20000>;
	};

	uboot@20000 {
		label = "u-boot";
		reg = <0x20000 0x80000>;
	};

	ubootenv@a0000 {
		label = "u-boot-env-a";
		reg = <0xa0000 0x20000>;
	};

	ubootenv@c0000 {
		label = "u-boot-env-b";
		reg = <0xc0000 0x20000>;
	};

	kernel-a@e0000 {
		label = "kernel-a";
		reg = <0xe0000 0x280000>;
	};

	kernel-b@360000 {
		label = "kernel-b";
		reg = <0x360000 0x280000>;
	};

	rootfs-a@5e0000 {
		label = "rootfs-a";
		reg = <0x5e0000 0x2600000>;
	};

	rootfs-b@2be0000 {
		label = "rootfs-b";
		reg = <0x2be0000 0x2600000>;
	};

	user@51e0000 {
		label = "user";
		reg = <0x51e0000 0x2d20000>;
	};

	logs@7fa0000 {
		label = "logs";
		reg = <0x7f00000 0x80000>;
	};
};

&usb0 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_usb_vbus>;

	num-ports = <2>;

	atmel,vbus-gpio = <&pioB 12 GPIO_ACTIVE_HIGH>, <&pioA 31 GPIO_ACTIVE_HIGH>;
	atmel,oc-gpio = <&pioB 13 GPIO_ACTIVE_LOW>, <0>;
};

&usb2 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_usba_vbus>;

	atmel,vbus-gpio = <&pioB 11 GPIO_ACTIVE_HIGH>;
};
